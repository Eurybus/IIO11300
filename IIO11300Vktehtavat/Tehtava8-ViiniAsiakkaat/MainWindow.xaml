<Window x:Class="Tehtava8_ViiniAsiakkaat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtava8_ViiniAsiakkaat"
        mc:Ignorable="d"
        Title="ViiniAsiakkaat" Height="350" Width="525">
    <Grid>
        <DataGrid x:Name="myGrid" ItemsSource="{Binding}"/>
        <StackPanel Orientation="Horizontal">
            <StackPanel Margin="0,15,0,0">
                <Button x:Name="btnConnect" Click="btnConnect_Click">Hae Asiakkaat</Button>
                <ComboBox x:Name="lbCustomers"/>
            </StackPanel>
            <StackPanel Margin="5,15,0,0">
                <TextBlock Text="Etunimi"/>
                <TextBox x:Name="tbxName" Text="Name here"/>
                <TextBlock Text="Sukunimi"/>
                <TextBox x:Name="tbxLName" Text="Name here"/>
                <TextBlock Text="Osoite"/>
                <TextBox x:Name="tbxAddr" Text="address here"/>
                <TextBlock Text="Kaupunki"/>
                <TextBox x:Name="tbxCity" Text="City here"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
