<Window x:Class="Tehtava7_SalasanaVahvuusTarkistin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtava7_SalasanaVahvuusTarkistin"
        mc:Ignorable="d"
        Title="Password Strength Checker" Height="293.602" Width="431.863">
    <Grid HorizontalAlignment="Left">
        <StackPanel Margin="10">
            <TextBlock Text="Tarkistettava salasana:"/>
            <PasswordBox x:Name="pwbPassword" PasswordChanged="pwbPassword_PasswordChanged"/>
            <TextBlock Text="..." x:Name="tbCharCount"/>
            <TextBlock Text="..." x:Name="tbCapChars"/>
            <TextBlock Text="..." x:Name="tbMinorChars"/>
            <TextBlock Text="..." x:Name="tbNumbers"/>
            <TextBlock Text="..." x:Name="tbSpecialChars"/>
            <TextBlock Text="..." x:Name="tbSha1"/>
            <TextBlock Text="Anna salasana" x:Name="tbIndicator" FontSize="64" Background="Gray" />
        </StackPanel>
    </Grid>
</Window>
